{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": ["mail/templates/**/*"],
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": {
          "introspectComments": true,
          "dtoFileNameSuffix":[
            ".dto.ts"
          ]
        }
      }
    ]
  }
}
